<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="css/signup.css">

<link rel="icon" href="/ico.png" type="x-icon">

    <title>𝐒𝐢𝐠𝐧𝐔𝐩 𝐏𝐚𝐠𝐞</title>

</head>
<body>

<% include('../layout/header.ejs') %>

<div class="wrapper">

<h2 class="text-center fw-bolder ">𝐒𝐢𝐠𝐧 𝐔𝐩</h2>


<% 
    if(typeof message !== 'undefined' && message){

        %>
        <div class="text-center fw-bold text-danger"><%= message %></div>
        <%
    }
%>

    <% if(locals.emailExists !== undefined && emailExists) { %> 

            <div class="emailExists text-danger fw-bold ">

                 <%= emailExists %>

            </div>

    <% } %>

<form action="/signup" method="post" enctype="application/x-www-form-urlencoded">

    <div class="input-box">

        <input type="text" placeholder="𝙁𝙞𝙧𝙨𝙩 𝙣𝙖𝙢𝙚" name="firstname" oninput="hello(this)" required>

    </div>

    <div class="input-box">

        <input type="text" placeholder="𝙇𝙖𝙨𝙩 𝙣𝙖𝙢𝙚" name="lastname" oninput="hello(this)" required>

    </div>

    <div class="input-box">

        <input type="email" placeholder="𝙀𝙢𝙖𝙞𝙡" name="email" oninput="hello(this)" required>

    </div>
 

    <div class="input-box">

        <input type="password" placeholder="𝙋𝙖𝙨𝙨𝙬𝙤𝙧𝙙" name="password" oninput="hello(this)" required>

    </div>

        <button class="btn btnn submit" type="submit">𝙎𝙞𝙜𝙣 𝙐𝙥</button>

    <div class="log d-flex justify-content-center ">

        <p class="lm mt-4 ">𝒂𝒍𝒓𝒆𝒂𝒅𝒚 𝒉𝒂𝒗𝒆 𝒂𝒏 𝒂𝒄𝒄𝒐𝒖𝒏𝒕?</p><a class="text-white mt-4" href="/login">𝑳𝒐𝒈𝒊𝒏 𝒉𝒆𝒓𝒆</a>

    </div>
        

</form>


</div>

<script>

    const submit=document.querySelector('.submit');

    function hello(e){
        
        if(e.value.trim()=='' ){

            submit.style.pointerEvents = 'none';
            submit.style.opacity = 0.6;
            
        }else{

            submit.style.opacity = 1;
            submit.style.pointerEvents = 'all'

        }

         if(e.value.trim().length < 4){

            submit.style.pointerEvents = 'none';
            submit.style.opacity = 0.6;
            
        }else{

            submit.style.opacity = 1;
            submit.style.pointerEvents = 'all'

        }
    }
    
    </script>

<% include('../layout/footer.ejs') %>