<script src="https://kit.fontawesome.com/7aa3d66fb2.js" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="/css/edituser.css">

<link rel="icon" href="/ico.png" type="x-icon">

    <title>𝐄𝐝𝐢𝐭 𝐔𝐬𝐞𝐫 𝐏𝐚𝐠𝐞</title>

</head>
<body>

<% include('../layout/header.ejs') %>




 <div class="container">


     <div class="box-nav d-flex justify-between">
           <div class="filter border-shadow p-2 ">
               <a class="text-white " href="/admin/home"><i class="fas fa-angle-double-left fas fa-user"></i> All Users</a>
           </div>
        </div>

        <div class="my form-title text-center">
            <h2 class="text-white ">𝗘𝗱𝗶𝘁 𝗨𝘀𝗲𝗿</h2>
            <span class="text-light">Use the below form to create a new account</span>
        </div>

</div>


 <form action="/admin/edituser" method="POST" id="add_user" enctype="application/x-www-form-urlencoded">

    <div class="new_user">

        <div class="form-group">

            <label for="name" class="text-light">𝙁𝙞𝙧𝙨𝙩𝙉𝙖𝙢𝙚</label>
            <input type="text" name="firstname" value="<%= user.firstname %>" placeholder="FirstName" required>
        </div>

        <div class="form-group">

            <label for="name" class="text-light">𝙇𝙖𝙨𝙩𝙉𝙖𝙢𝙚</label>
            <input type="text" name="lastname" value="<%= user.lastname %>" placeholder="LastName" required>
        </div>

        <div class="form-group">

            <label for="Email" class="text-light">𝙀𝙢𝙖𝙞𝙡</label>
            <input type="text" name="email" value="<%= user.email %>" placeholder="Email" required>
        </div>

        <div class="form-group">

            <label for="password" class="text-light">Password</label>
            <input type="text" name="password" value="<%= user.password %>" placeholder="Password" required>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">𝙎𝙖𝙫𝙚</button>
            <input type="hidden" name="id" value="<%= user._id %>">
        </div>

    </div>

</form>

<% include('../layout/footer.ejs') %>
