<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
<script src="https://kit.fontawesome.com/7aa3d66fb2.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/adminHome.css">

<title>𝐀𝐝𝐦𝐢𝐧 𝐇𝐨𝐦𝐞 𝐏𝐚𝐠𝐞</title>

<link rel="icon" href="/ico.png" type="x-icon">

</head>
<body>

<% include('../layout/header.ejs') %>

<nav class="n navbar navbar-expand-lg">

  <div class="container-fluid">

    <h2 class="reveal-text text-center ">𝐀𝐝𝐦𝐢𝐧 𝐏𝐚𝐧𝐞𝐥</h2>

    <!-- Admin Logout Section -->

      <form action="/admin/logout" method="post" class="logbt d-flex me-3 " role="search">
        <!-- <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> -->
        <button class="btn logbt btn-danger" type="submit"><i class="fa-solid fa-right-from-bracket"></i></button>
      </form>

    </div>

  </div>

</nav>

    <!-- Main Site -->
    <main id="site-main">

        <div class="container">

            <div class="box-nav d-flex justify-between">

                <a href="/admin/newuser" class="newuser  border-shadow">

                    <span class="text-white ">𝗡𝗲𝘄 𝗨𝘀𝗲𝗿 <i class="fas fa-user"></i></span>
                </a>

            </div>


            <div class="search-div d-flex ">
                <form action="" class="sf d-flex flex-row ">
                    <input class="in p-2 border-shadow" type="text" placeholder="Search " name="search">
                    <input class="inn btn bg-dark text-white " type="submit" value="search">
                </form>
            </div>


     <% if(locals.adduserMsg !== undefined && adduserMsg) { %>
            
            <div class="ads text-success fw-bold ">

                <%= adduserMsg %>

            </div>

    <% } %>

       <% if(locals.editusersuccess !== undefined && editusersuccess) { %>
            
            <div class="ads text-success fw-bold ">

                <%= editusersuccess %>

            </div>

    <% } %>

            <!-- form handling -->

            <form action="#" method="POST" >

                <table class="table">

                    <thead class="thead-dark">

                        <tr>
                            <th>𝙄𝘿</th>
                            <th>𝙁𝙞𝙧𝙨𝙩𝙉𝙖𝙢𝙚</th>
                            <th>𝙇𝙖𝙨𝙩𝙉𝙖𝙢𝙚</th>
                            <th>𝙀𝙢𝙖𝙞𝙡</th>
                            <th>𝘼𝙘𝙩𝙞𝙤𝙣</th>
                        </tr>

                    </thead>

                    <!-- Fetch data in dbs and show -->

                    <tbody>

                      <% for(var i = 0; i < users.length; i++) { %>

                          <tr>
                            
                              <td><%= i + 1 %></td>
                              <td><%= users[i].firstname %></td>
                              <td><%= users[i].lastname %></td>
                              <td><%= users[i].email %></td>
                              <td>

                                <!-- Edit User Section -->

                                  <a href="/admin/edituser?id=<%= users[i]._id%>" class="btn border-shadow update">

                                      <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                                      
                                  </a>
                                                                    
                                  <!-- Delete User Section -->

                                    <a href="/admin/deleteuser?id=<%= users[i]._id%>" class="btn border-shadow delete">
                                    
                                      <span class="text-gradient"><i class="fas fa-times"></i></span>

                                  </a>

                              </td>

                          </tr>

                      <% } %>

                    </tbody>

                </table>
            </form>
            
        </div>
    </main>


      <% if(locals.emailExists !== undefined && emailExists) { %>
            
            <div class="ads text-danger p-3  fw-bold ">

                <%= emailExists %>

            </div>

    <% } %>

      <% if(locals.deleteSuccess !== undefined && deleteSuccess) { %>
            
            <div class="ads text-success  p-3  fw-bold ">

                <%= deleteSuccess %>

            </div>

    <% } %>




<!-- /Main Site -->

<% include('../layout/footer.ejs') %>
