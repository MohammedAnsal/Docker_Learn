    <title>𝐀𝐝𝐦𝐢𝐧 𝐏𝐚𝐠𝐞</title>

</head>
<body>

<% include('../layout/header.ejs') %>

<div class="wrapper">
    
    <h3 class="h3">𝐀𝐝𝐦𝐢𝐧 𝐋𝐨𝐠𝐢𝐧</h3>


     <% if(locals.errorMsg !== undefined && errorMsg) {%>

        <span class="p text-danger fw-bold ">

            <%= errorMsg %>

        </span>

    <% } %>

     <% if(locals.logoutAdmin !== undefined && logoutAdmin) { %>
            
            <div class="ads text-success fw-bold ">

                <%= logoutAdmin %>

            </div>

    <% } %>

     <% if(locals.adminUserMsg !== undefined && adminUserMsg) { %>
            
            <div class="ads text-success fw-bold ">

                <%= adminUserMsg %>

            </div>

    <% } %>


    <form action="" method="post">
        
        <div class="input-box">

            <input type="email" placeholder="𝙀𝙢𝙖𝙞𝙡" name="email" required>
            <i class='bx bxs-user'></i>

        </div>
        
        <div class="input-box">

            <input type="password" placeholder="𝙋𝙖𝙨𝙨𝙬𝙤𝙧𝙙" name="password" required>
            <i class='bx bxs-lock-alt' ></i>

        </div>

        <button type="submit" class="btn  btnn">𝙇𝙤𝙜𝙞𝙣</button>

    </form>


</div>


